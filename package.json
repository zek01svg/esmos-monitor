{
  "name": "esmos-monitor",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot server/index.ts",
    "prepare": "husky",
    "load-env": "dotenv -e .env --",
    "build": "bun load-env bun build --production --minify --target=bun --outdir=build server/index.ts",
    "start": "NODE_ENV=production bun load-env bun build/index.js",
    "test": "bun run load-env -- bun run playwright test server/tests/e2e"
  },
  "dependencies": {
    "@logtail/pino": "^0.5.7",
    "@playwright/test": "^1.58.2",
    "@supabase/supabase-js": "^2.95.3",
    "@t3-oss/env-core": "^0.13.10",
    "hono": "^4.11.9",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.6",
    "@sentry/node": "^10.38.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.2.3",
    "dotenv": "^17.3.1",
    "dotenv-cli": "^11.0.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "bun": ">=1.3.0",
    "pnpm": ">=10.20.0"
  }
}
